#:import PrepareScene prepare.PrepareScene
#:import LeftList prepare.LeftList
#:import CenterList prepare.CenterList
#:import RightList prepare.RightList

<PrepareScene>:
    llist: llist
    clist: clist
    rlist: rlist
    glayout: glayout

    title: 'prepare'

    PaddedBoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            spacing: 200

            LeftList:
                id: llist
            CenterList:
                id: clist
            RightList:
                id: rlist

        CompGraphLayout:
            id: glayout
            graph: graph
            Graph:
                id: graph

<PlayerList>
    orientation: 'vertical'

<ListItem>
    orientation: 'horizontal'
    name: name.__self__
    lbtn: lbtn.__self__
    rbtn: rbtn.__self__

    Button:
        id: lbtn
        size_hint_x: 0.1
        text: '<-'
        on_press: self.parent.on_lbtn(name.text)

    Label:
        id: name
        size_hint_x: 0.3
        text: 'noname'
        font_size: 64

    Button:
        id: rbtn
        size_hint_x: 0.1
        text: '->'
        on_press: self.parent.on_rbtn(name.text)
