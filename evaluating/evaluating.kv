#:import GRAPH_XMAX settings.GRAPH_XMAX
#:import GRAPH_YMAX settings.GRAPH_YMAX

TopLayout:
    scene: scene

    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.1
        padding: 20

        Button:
            text: 'Prepare'
            on_press: root.show_prepare()

        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_x: 0.2
                text: 'Red Win'
                on_press: root.show_lwin()
            Button:
                size_hint_x: 0.2
                text: 'Draw'
                on_press: root.show_draw()
            Button:
                size_hint_x: 0.2
                text: 'Blue Win'
                on_press: root.show_rwin()

    Scene:
        id: scene

<Graph>:
    xlabel: 'X'
    ylabel: 'Y'
    x_ticks_minor: GRAPH_XMAX/20
    x_ticks_major: GRAPH_XMAX/10
    y_ticks_major: GRAPH_YMAX
    x_grid_label: True
    y_grid_label: True
    padding: 5
    x_grid: True
    y_grid: True
    xmin: 0
    xmax: GRAPH_XMAX
    ymin: 0
    ymax: GRAPH_YMAX

<PaddedBoxLayout@BoxLayout>:
    padding: [50,50]
    spacing: 10
