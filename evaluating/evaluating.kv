#:import GRAPH_XMAX settings.GRAPH_XMAX
#:import GRAPH_YMAX settings.GRAPH_YMAX

TopLayout:
    mainacc: mainacc

    orientation: 'vertical'

    MainAccordion:
        id: mainacc
        orientation: 'vertical'

<Graph>:
    xlabel: 'X'
    ylabel: 'Y'
    x_ticks_minor: GRAPH_XMAX/20
    x_ticks_major: GRAPH_XMAX/10
    y_ticks_major: GRAPH_YMAX
    x_grid_label: True
    y_grid_label: True
    padding: 5
    x_grid: True
    y_grid: True
    xmin: 0
    xmax: GRAPH_XMAX
    ymin: 0
    ymax: GRAPH_YMAX

<PaddedBoxLayout@BoxLayout>:
    padding: [50,50]
    spacing: 10
